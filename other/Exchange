
// 1. Создать группу для samba пользователей
// 2. Создать всех пользователей с первичной группой из п.1, пароль для всех , пароль для группы бухгалтерия 
// 3. Добавить и set enable всех пользователей в samba

// 4. Создать для каждого каталог в exchange, назначить владельца и группу каталогу
//  а так же права 0755

// 5. Добавь новую секцию

[exchange]
	comment = folder for exchange
	path = /mnt/samba/exchange_new
	valid users = smbaleksandr
	force group = smbusers
	group = smbusers
	read only = No
	force create mode = 0640
	force directory mode = 0750
	hosts deny = 192.168.3.
	wide links = Yes

// 6. В секции global добавь/измени следующие параметры:
  map to guest = Never
	create mask = 0644
	directory mode = 0755

// 7. Каталог documents

[documents]
# Added by Dr.Web's drweb_smbspider_configure.sh
   vfs objects = smb_spider

comment = folder for documents
path = /mnt/samba/documents
browseable = yes
writeable = yes
guest ok = no
valid users = smbaleksandr
force group = smbaccountants
force create mode = 0664
force directory mode = 0770
wide links = no
hosts deny = 192.168.3.

// 8. Добавляем всех пользователей для каталога documents во вторичную группу
// Добавление пользователя в группу(вторичную)
sudo usermod -aG groupename username

